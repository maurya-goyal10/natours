mixin reviewCard(photo,name,review,rating)
    .reviews__card
        .reviews__avatar
            img.reviews__avatar-img(src=`/img/users/${photo}`, alt='image of the user')
            h6.reviews__user= name 
        p.reviews__text= review 
        .reviews__rating
            each star in [1,2,3,4,5]
                svg.reviews__star.reviews__star--active(class=`reviews__star--${rating >= star?'active':'inactive'}`)
                    use(xlink:href='/img/icons.svg#icon-star')